<ul class="list-unstyled">
  <% tasks.each do |task| %>
    <li class="media mb-3">
      <div class="media-body">
        <div>
          <%= link_to task.user.name, user_path(task.user) %> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <table>
          <thead>
            <tr>
              <th>タスク</th>
        　　　　<th>状況</th>
        　　</tr>
          </thead>
          <tbody>
            <tr>
              <td><%= task.content %></td>
              <td><%= task.status %></td>
            </tr>
          </tbody>
        </table>
        <div>
          <% if current_user == task.user %>
            <%= link_to "Edit", edit_task_path(task.id), data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
            <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>