<div class="row">
  <aside>
    <%= form_with(model: @task, local: true) do |f| %>
      <div class="form-group">
        <p>タスク</p>
        <%= f.text_area :content, class: 'form-control' %>
      </div>
      <div class="form-group">
        <p>状況</p>
        <%= f.text_area :status, class: 'form-control' %>
      </div>
      <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
    <% end %>
  </aside>
  <div>
    <h1><%= @user.name %></h1>
  </div>
  <div>
    <ul>
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">タスク全部で  <span class="badge badge-secondary"><%= @count_tasks %></span></a></li>
    </ul>
  </div>
  <div>
    <%= render 'tasklists/tasklists', tasks: @tasks %>
  </div>
</div>